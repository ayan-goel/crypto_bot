# Trading Configuration for HFT Crypto Bot
# Capital and Position Management
INITIAL_CAPITAL=50.0
ORDER_SIZE=0.001
MAX_INVENTORY=0.015
POSITION_LIMIT_ETHUSDT=0.02

# Market Making Strategy
SPREAD_THRESHOLD_BPS=1.0
